---
import ThemeToggle from '../components/ThemeToggle.astro';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Software Engineer specializing in building exceptional digital experiences" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
    
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
      document.documentElement.style.visibility = 'visible';
    </script>
    <style is:inline>
      html {
        visibility: hidden;
      }
      html.dark {
        color-scheme: dark;
      }
      
      @keyframes fade-in {
        from { opacity: 0; }
        to { opacity: 1; }
      }

      body {
        animation: fade-in 0.5s ease-out;
      }
    </style>
  </head>
  <body class="bg-[#0a192f] text-gray-100 transition-colors duration-300">
    <div class="max-w-5xl mx-auto px-4 py-8">
      <header class="fixed top-0 left-0 right-0 z-50 bg-[#0a192f]/80 backdrop-blur-sm">
        <nav class="max-w-5xl mx-auto px-4 py-4 flex justify-between items-center">
          <Navigation />
          <ThemeToggle />
        </nav>
      </header>
      <main class="pt-20">
        <slot />
      </main>
      <footer class="mt-16 text-center text-gray-400">
        <p>Built with Astro & Framer Motion</p>
      </footer>
    </div>
  </body>
</html>