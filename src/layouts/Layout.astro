---
import ThemeToggle from '../components/ThemeToggle.astro';
import Navigation from '../components/Navigation.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Sarthak Dalabehera - Software Engineer with a focus on Platform and Infrastructure" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Performance optimizations -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- SEO -->
    <meta name="author" content="Sarthak Dalabehera">
    <meta name="keywords" content="software engineer, platform, infrastructure, AWS, cloud, backend">
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Software Engineer with a focus on Platform and Infrastructure" />
    <meta property="og:type" content="website" />

    <title>{title}</title>

    <!-- Inline script to set theme before page load -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }

      // Prevent flash by hiding content until theme is applied
      document.documentElement.style.visibility = 'visible';
    </script>

    <style is:inline>
      html {
        visibility: hidden;
        scroll-behavior: smooth;
      }
      html.dark {
        color-scheme: dark;
      }
      body {
        font-family: 'Inter', sans-serif;
      }

      /* Background gradient */
      .bg-gradient-pattern {
        background-color: #ffffff;
        background-image: radial-gradient(#2563eb10 1px, transparent 1px);
        background-size: 20px 20px;
      }
      .dark .bg-gradient-pattern {
        background-color: #111827;
        background-image: radial-gradient(#2563eb15 1px, transparent 1px);
      }

      /* Scrollbar styling */
      ::-webkit-scrollbar {
        width: 10px;
      }
      ::-webkit-scrollbar-track {
        background: #f1f1f1;
      }
      .dark ::-webkit-scrollbar-track {
        background: #1f2937;
      }
      ::-webkit-scrollbar-thumb {
        background: #888;
        border-radius: 5px;
      }
      ::-webkit-scrollbar-thumb:hover {
        background: #555;
      }
      .dark ::-webkit-scrollbar-thumb {
        background: #4b5563;
      }
      .dark ::-webkit-scrollbar-thumb:hover {
        background: #6b7280;
      }
    </style>
  </head>
  <body class="bg-gradient-pattern dark:bg-gradient-pattern text-gray-900 dark:text-gray-100 transition-colors duration-300">
    <div class="max-w-5xl mx-auto px-4 py-8">
      <header class="flex justify-between items-center mb-8 sticky top-0 z-40 py-4 bg-white/80 dark:bg-gray-900/80 backdrop-blur-sm">
        <Navigation />
        <ThemeToggle />
      </header>
      <main>
        <slot />
      </main>
      <footer class="mt-24 py-8 text-center text-gray-600 dark:text-gray-400 border-t border-gray-200 dark:border-gray-800">
        <div class="max-w-2xl mx-auto">
          <div class="flex justify-center space-x-6 mb-6">
            <a
