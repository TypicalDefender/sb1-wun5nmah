---
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Me">
  <article class="prose dark:prose-invert max-w-none">
    <h1>About Me</h1>
    
    <section>
      <h2>Career Journey</h2>
      <p>
        [Your career journey description here]
      </p>
    </section>

    <section>
      <h2>Work Experience</h2>
      <div class="space-y-6">
        <div>
          <h3>Senior Developer at Company Name</h3>
          <p class="text-gray-600 dark:text-gray-400">2020 - Present</p>
          <ul>
            <li>Achievement 1</li>
            <li>Achievement 2</li>
          </ul>
        </div>
        
        <div>
          <h3>Developer at Previous Company</h3>
          <p class="text-gray-600 dark:text-gray-400">2018 - 2020</p>
          <ul>
            <li>Achievement 1</li>
            <li>Achievement 2</li>
          </ul>
        </div>
      </div>
    </section>

    <section>
      <h2>Education</h2>
      <p>
        [Your education details]
      </p>
    </section>
  </article>
</Layout>