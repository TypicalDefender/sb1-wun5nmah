---
const links = [
  { href: '/', text: 'Home' },
  { href: '/about', text: 'About' },
  { href: '/blog', text: 'Blog' }
];
---

<nav>
  <ul class="flex gap-6">
    {links.map(link => (
      <li>
        <a 
          href={link.href}
          class="text-gray-800 dark:text-gray-200 hover:text-primary dark:hover:text-primary transition-colors"
        >
          {link.text}
        </a>
      </li>
    ))}
  </ul>
</nav>